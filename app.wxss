/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

page{
  height:100%;
  background: #F7F7F7;
  box-sizing: border-box;
}
.bold{
  font-size:32rpx;
  font-family:PingFangSC-Semibold;
  font-weight:600;
  line-height:44rpx;
}
.normal{
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  line-height:40rpx;
}
.small{
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  line-height: 34rpx;
}
@keyframes fadeIn{
  0% {opacity: 0;}
  25% {opacity: 0.5;}
  50% {opacity: 1;}
  75% {opacity: .5;}
  100% {opacity: 1;}
}
.animation-opacity{
  animation:fadeIn 2s ease-in;

}