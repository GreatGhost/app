.order-list-item{
    margin-top:20rpx;
    background: #fff;
}
.item-header{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding:30rpx 40rpx;
}
.order-status{
    color:#FF1A29;
}
.item-content{
    display: flex;
    align-items: flex-start;
    padding: 28rpx 40rpx;
    border-top:1rpx solid #F7F7F7;
    border-bottom: 1rpx solid #F7F7F7;
}
.item-content image{
    width:128rpx;
    height:128rpx;
    margin-right:24rpx;
    border-radius:4rpx;
    border:1rpx solid rgba(242,242,242,1);
}
.item-content .product-content{
    flex:1;
}
.item-content .product-content .price{
    margin-top:34rpx;
    color: #FF1A29;
}
.item-content .mount{
    font-size: 32rpx;
    color:rgba(153,153,153,1);
    line-height:44rpx;
}
.item-footer{
    display: flex;
    justify-content: flex-end;
    align-items: center;
    padding: 28rpx 40rpx 28rpx 0;
}
.item-footer view{
    height:64rpx;
    margin-left:30rpx;
    border-radius:32rpx;
    border:1rpx solid rgba(153,153,153,1);
    padding:0 44rpx;
    color:rgba(153,153,153,1);
    line-height: 64rpx;
    
}
.item-footer view:last-child{
    color: #FF1A29;
    border:1rpx solid #FF1A29;
}