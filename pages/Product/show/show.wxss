/* pages/Product/show/show.wxss */
.content-title{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.content-title view:first-child{
    color:#000;
}
.content-title view:last-child{
    color:#9B9B9B;
}
.show swiper{
    width:100%;
    height:700rpx;
    border-bottom:1rpx solid #f2f2f2;
    background: #fff;
}
.show swiper swiper-item{
    width:100%;
    height:700rpx;
}
.show swiper image{
    position: absolute;
    left:50%;
    top:50%;
    transform: translate(-50%,-50%);
    width:600rpx;
    height:600rpx;
}
.product-name{
    display: flex;
    padding:40rpx;
    justify-content: space-between;
    background: #fff;
}
.product-name .title .small{
    margin-top:10rpx;
    color: #9B9B9B;
}
.wx-group image{
    display: block;
    margin: 0 auto;
    width:80rpx;
    height:80rpx;
}
.wx-group view{
    margin-top:10rpx;
    color: #9B9B9B;
}
.product-region{
    margin-top:20rpx;
    padding-top:60rpx;
    padding-bottom:60rpx;
    background: #fff;
    text-align: center;
}
.product-region .region{
    font-size:40rpx;
    
}
.product-region .region text:last-child{
    color: #FF1A29;
}
.product-region .rule{
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top:40rpx;
    color:#9B9B9B;
}
.product-region .rule image{
    width:24rpx;
    height:36rpx;
    margin-left:8rpx;
}